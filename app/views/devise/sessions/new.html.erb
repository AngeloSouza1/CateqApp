<div class="container-fluid vh-100">
  <div class="row h-100">
    
    <!-- Coluna da Imagem -->
    <div class="col-md-6 d-none d-md-block p-0" style="user-select: none; pointer-events: none;">
      <div class="h-100 w-100">
        <img src="<%= asset_path('info2.jpg') %>" alt="Imagem de Login" class="img-fluid h-100 w-100" style="object-fit: cover;">
      </div>
    </div>

    <!-- Coluna do Formulário de Login -->
    <div class="col-md-6 d-flex align-items-center justify-content-center" style="background-color: #343a40; min-height: 100vh;">
      <div class="card p-5 shadow-lg" 
           style="width: 100%; 
                  max-width: 400px; 
                  border-radius: 15px; 
                  background-color: #f0f0f0; 
                  transition: none !important; 
                  transform: none !important; 
                  box-shadow: none !important; 
                  user-select: none; 
                  pointer-events: all;">
        
        <h2 class="text-center mb-4" style="color: #343a40;">Login</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>

          <!-- Email Input -->
          <div class="mb-4">
            <%= f.label :email, "E-mail", class: "form-label", style: "color: #343a40;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill px-4 py-3", style: "transition: none !important;" %>
          </div>

          <!-- Password Input -->
          <div class="mb-4">
            <%= f.label :password, "Senha", class: "form-label", style: "color: #343a40;" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-pill px-4 py-3", style: "transition: none !important;" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <!-- Remember Me Checkbox -->
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input", style: "transition: none !important;" %>
              <%= f.label :remember_me, "Lembrar-me", class: "form-check-label", style: "color: #343a40;" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="d-grid mb-3">
            <%= f.submit "Entrar", class: "btn rounded-pill", style: "background-color: #343a40; color: white; transition: none !important;" %>
          </div>

        <% end %>

        <!-- Links de recuperação e registro -->
        <div class="mt-3 text-center" style="color: #343a40;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
