<div class="container-fluid vh-100">
  <div class="row h-100">
    
    <!-- Coluna da Imagem -->
    <div class="col-md-6 d-none d-md-block p-0" style="user-select: none; pointer-events: none;">
      <div class="h-100 w-100">
        <img src="<%= asset_path('info2.jpg') %>" alt="Imagem de Sign Up" class="img-fluid h-100 w-100" style="object-fit: cover;">
      </div>
    </div>

    <!-- Coluna do Formulário de Sign Up -->
    <div class="col-md-6 d-flex align-items-center justify-content-center" style="background-color: #343a40; min-height: 100vh;">
      <div class="card p-5 shadow-lg" 
           style="width: 100%; 
                  max-width: 400px; 
                  border-radius: 15px; 
                  background-color: #f0f0f0; 
                  transition: none !important;
                  box-shadow: none !important; 
                  user-select: none; 
                  pointer-events: all;">
        
        <h2 class="text-center mb-4" style="color: #343a40;">Cadastro</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Email Input -->
          <div class="mb-4">
            <%= f.label :email, "E-mail", class: "form-label", style: "color: #343a40;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill px-4 py-3" %>
          </div>

          <!-- Password Input -->
          <div class="mb-4">
            <%= f.label :password, "Senha", class: "form-label", style: "color: #343a40;" %>
            <% if @minimum_password_length %>
              <em style="color: #343a40;">(<%= @minimum_password_length %> caracteres no mínimo)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill px-4 py-3" %>
          </div>

          <!-- Password Confirmation Input -->
          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirme a Senha", class: "form-label", style: "color: #343a40;" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill px-4 py-3" %>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mb-3">
            <%= f.submit "Cadastrar", class: "btn rounded-pill", style: "background-color: #343a40; color: white;" %>
          </div>

        <% end %>

        <!-- Links para login e recuperação de senha -->
        <div class="mt-3 text-center" style="color: #343a40;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
