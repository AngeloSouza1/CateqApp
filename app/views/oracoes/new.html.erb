<%= form_with(model: @oracao, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :conteudo %>
    <%= form.text_area :conteudo, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Voltar', oracoes_path, class: 'btn btn-secondary' %>
