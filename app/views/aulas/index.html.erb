<div class="container-fluid mt-5">
  <div class="row">
    
    <!-- Sidebar fixa à esquerda -->
    <div class="col-md-2 sidebar">
      <h3>Links</h3>
      <ul class="nav flex-column">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Aulas', aulas_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Postagens', postagens_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Mensagens', mensagens_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>

    <!-- Conteúdo principal (Aulas) -->
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Aulas</h1>

      <!-- Adicionando a área de rolagem para todos os cards -->
      <div class="row card-container">
        <% @aulas.each do |aula| %>
          <div class="col-md-4"> <!-- Garante 3 cards por linha -->
            <div class="card card-custom">
              <div class="card-body card-body-custom">
                <h5 class="card-title"><%= aula.title %></h5>
                <p class="card-text"><%= aula.content.truncate(100) %></p>
              </div>
              <%= link_to 'Ver Aula', aula_path(aula), class: 'btn btn-primary mt-auto' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Coluna para o banner à direita -->
    <div class="col-md-2">
      <div class="banner">
        <div class="banner-content">
          <h2>Banner de Imagem</h2>
          <p>Este espaço será utilizado para um banner futuro.</p>
          <img src="https://via.placeholder.com/300x300" alt="Imagem de exemplo" class="img-fluid">
        </div>
      </div>
    </div>

  </div>
</div>
