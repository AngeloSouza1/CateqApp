<%= form_with(model: @ficha_cadastral, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: 'form-control' %>
  </div>

     <div class="mb-3">
        <%= form.label :email,  "E-mail", class: "form-label fw-bold" %>
        <%= form.text_field :email,  class: "form-control form-control-underline", placeholder: "Digite o e-mail do catequisando" %>
     </div>

  <div class="form-group">
    <%= form.label :endereco %>
    <%= form.text_field :endereco, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :data_nascimento %>
    <%= form.date_select :data_nascimento, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.telephone_field :telefone, class: 'form-control' %>
  </div>

  <%= form.submit 'Atualizar Ficha', class: 'btn btn-primary' %>
<% end %>
