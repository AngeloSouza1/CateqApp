<div class="container mt-5">
  <h1>Enviar Nova Mensagem</h1>

  <%= form_with(model: @mensagem, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :receiver_id, "DestinatÃ¡rio" %>
      <%= form.collection_select :receiver_id, User.where(role: 'catequista'), :id, :email, class: "form-control" %>
    </div>

    <div class="form-group">
